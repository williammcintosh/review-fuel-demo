{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/sendDemo", "function": "sendDemo" },
      { "source": "/generateDemo", "function": "generateDemo" },
      { "source": "/sendDemoSms", "function": "sendDemoSms" }
    ]
  },
  "emulators": {
    "firestore": { "port": 8081 },
    "hosting": { "port": 5050 },
    "functions": { "port": 5051 },
    "ui": { "port": 4001 }
  }
}
